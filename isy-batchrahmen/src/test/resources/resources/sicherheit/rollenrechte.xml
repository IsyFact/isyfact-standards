<?xml version="1.0" encoding="UTF-8"?>
<tns:Anwendung AnwendungsId="Batchrahmen" xmlns:tns="http://www.example.org/RollenRechteSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.example.org/RollenRechteSchema">

    <!-- Eine Rolle und ein Recht. Jeder, der die Rolle trägt, trägt auch das Recht. -->

    <tns:rechte>
        <tns:rechtId Id="Recht" />
    </tns:rechte>

    <tns:rollen RolleId="Anwender">
        <tns:rechtId Id="Recht" />
    </tns:rollen>

</tns:Anwendung>